link(rel='stylesheet', href='/stylesheets/style.css')
link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap.min.css')

block content
    h1 Details for #{result.name}

    table.table.tab-content
        tr
            th Name:
            td #{result.name}
        tr
            th Symbol:
            td #{result.symbol}
        tr
            th Last Price:
            td $#{result.price}

    form(method='POST', action="/buy/#{result.symbol}")
        .form-group
            label Qty:
            input(type="text", name='buyQty', placeholder='Enter number of shares.')
            button(type="submit" class="btn btn-default") Buy

    form(method='POST', action="/sell/#{result.symbol}")
        .form-group
            label Qty:
            input(type="text", name='sellQty', placeholder='Enter number of shares.')
            button(type="submit" class="btn btn-default") Sell
